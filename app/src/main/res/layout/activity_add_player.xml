<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FAD3A0A0"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="5">


        <EditText
            android:id="@+id/username"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:text="Add first name"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:text="Add last name"
            android:textSize="25sp" />

        <Button
            android:id="@+id/login"
            android:layout_width="392dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="#CDE4EA"
            android:onClick="loginBtn"
            android:text="SunkIt!"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">


            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="#CDE4EA"
                android:onClick="loginBtn2"
                android:text="  Add Win   "
                android:textSize="20sp" />

            <Button
                android:id="@+id/lossButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="#CDE4EA"
                android:text="Add Loss"
                android:onClick="addLossBtn"
                android:textSize="20sp" />

            <Button
                android:id="@+id/sinkButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="#CDE4EA"
                android:text="Add Sink"
                android:onClick="addSinkBtn"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/homeButton"
            android:layout_width="392dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="#CDE4EA"
            android:text="@string/title_home"
            android:textSize="25sp" />


    </LinearLayout>

</RelativeLayout>